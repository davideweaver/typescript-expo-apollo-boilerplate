{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "arrow-parens": false,
        "no-any": true,
        "no-empty-interface": false,
        "quotemark": [
            true,
            "single"
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-pascal-case",
            "allow-leading-underscore"
        ]
    },
    "linterOptions": {
        "exclude": [
            "src/__generated__/*"
        ]
    }
}
